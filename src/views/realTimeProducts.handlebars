<h1>Realtime Products</h1>

<form id="productForm">
  <input
    type="text"
    id="productName"
    name="productName"
    placeholder="Nombre del Producto"
    required
  />
  <br />

  <input
    type="text"
    id="productDescription"
    name="productDescription"
    placeholder="Descripción"
    required
  />
  <br />

  <input
    type="text"
    id="productCode"
    name="productCode"
    placeholder="Código"
    required
  />
  <br />

  <input
    type="number"
    id="productPrice"
    name="productPrice"
    placeholder="Precio"
    required
  />
  <br />

  <input
    type="number"
    id="productStock"
    name="productStock"
    placeholder="Stock"
    required
  />
  <br />

  <input
    type="text"
    id="productCategory"
    name="productCategory"
    placeholder="Categoria"
    required
  />
  <br />
        <input type="submit" value="Agregar Producto" />

</form>
<br />
<button id="deleteProductBtn">Eliminar Último Producto</button>

<ul id="productList">
  {{#each products}}
    <li>{{this.title}} - Precio: ${{this.price}}</li>
  {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/realTimeProducts.js"></script>