<h2>PERFIL DEL USUARIO</h2>
{{#if user}}
  <p>Bienvenido, {{user.first_name}}!</p>
  <p>Email: {{user.email}}</p>
  <p>Edad: {{user.age}}</p>
  <p>Rol: {{user.role}}</p>
  <form action="{{actionLogin}}" method="post">
    <input type="submit" value="Cerrar sesion" />
  </form>
  <div class="profile-button-container">
    <button onclick="window.location.href='/'">Home</button>
    <button onclick="window.location.href='/products'">Comprar productos</button>
    <button onclick="window.location.href='/chat'">Iniciar chat</button>
    <button onclick="window.location.href='/admin'">Administrador</button>
  </div>
  <div class="profile-button-container">
    <button class='purchase-button' onclick="window.location.href='/products'">Comprar productos</button>
  </div>
{{else}}
  <p>El usuario no está logueado</p>
  <a href="/login">
    <button>Volver a inicio de sesión</button>
  </a>
{{/if}}
